<script>
$(function(){
   $('a[name=ops]').click(function(){
     var city=$(this).html();
       $.ajax({
          'url':'__CONTROLLER__/foodCity',
          'type':'post',
          'dataType':'json',
          'data':'city='+city,
          'success':function(res){
                if(res.code==10000)
                {
                   $('.SCcontent').html(res.data);

                }
                else
                {
                   $('.SCcontent').html('暂无数据');
                }
           }

       });
     })
})

$(function(){
   $('a[name=restaurant]').click(function(){
     var rest=$(this).html();
       $.ajax({
          'url':'__CONTROLLER__/foodRes',
          'type':'post',
          'dataType':'json',
          'data':'rest='+rest,
          'success':function(res){
                if(res.code==10000)
                {
                   $('.DCcontent').html(res.data);

                }
                else
                {
                   $('.DCcontent').html('暂无数据');
                }
           }

       });
     })
})

   
</script>


