</script>

<script>
    //发送短信验证码
    var time = 60;
    function sendmsg(_this){
       if(time == 60){
              //获取手机号
              var phone = $('#phone').val();
              if(phone == ''){
                  alert("请输入手机号");
              }
              //发送ajax请求
              $.ajax({
                  'url': '__CONTROLLER__/sendmsg',
                  'type': 'post',
                  'data': 'user_phone=' + phone,
                  'dataType': 'json',
                  'success':function(response){
                      if(response.code != 10000){
                          alert(response.msg);
                          return;
                      }else{
                          alert("发送成功");
                      }
                  }
              })
       }
      //以下是倒计时效果
      if(time > 0){
           time--;
           _this.value = "重新发送:" + time + 's';
           _this.disabled = true;
      }
      if(time == 0){
          time = 60;
          _this.value = "重新发送验证码";
                _this.disabled  = false;
                return ;
            }
            //定时器
      setTimeout(function(){
          sendmsg(_this);
      },1000);
    }
  </script>

